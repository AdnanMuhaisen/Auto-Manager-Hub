@using Auto_Manager_Hub.Models.Models
@model List<Make>


<h2>Vehicle Makes [Main Brands]</h2>

<a class="btn btn-primary mb-3" asp-controller="Make" asp-action="Upsert" asp-route-ID="0">
    <i class="bi bi-file-plus-fill"></i> New Make
</a>

<div style="display:inline-block">
    <div class="badge bg-primary text-wrap w-auto p-2 mb-2" style="width: 6rem;">
        Total number of rows : @Model.Count()
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Make ID</th>
            <th>Make [Brand] Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MakeId</td>
                <td>@item.MakeName</td>
                <td>
                    <a class=" btn btn-primary mr-2" asp-controller="MakeModels" asp-action="Index" asp-route-MakeID ="@item.MakeId">
                        <i class="bi bi-arrow-right-square-fill"></i> Show Models
                        </a>
                    <a class="btn btn-primary mr-2" asp-controller="Make" asp-action="Upsert" asp-route-ID="@item.MakeId">Edit</a>
                    <a class="btn btn-primary btn-danger" asp-controller="Make" asp-action="Remove" asp-route-ID="@item.MakeId">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back To Home</a>
<a class="btn btn-primary ml-2" asp-controller="Make" asp-action="GenerateExcel">
    Download As Excel Sheet <i class="bi bi-filetype-xlsx"></i>
</a>