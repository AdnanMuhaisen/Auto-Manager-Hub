@using Auto_Manager_Hub.Models.Models
@model List<FuelType>


<h2>Fuel Types</h2>

<a class="btn btn-primary mb-3" asp-controller="FuelType" asp-action="Upsert">
    <i class="bi bi-file-plus-fill"></i>New Fuel Type
</a>

<div style="display:inline-block">
    <div class="badge bg-primary text-wrap w-auto p-2 mb-2" style="width: 6rem;">
        Total number of rows : @Model.Count()
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Fuel Type ID</th>
            <th>Fuel Type Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FuelTypeId</td>
                <td>@item.FuelTypeName</td>
                <td>
                    <a class="btn btn-primary mr-2" asp-controller="FuelType" asp-action="Upsert" asp-route-ID="@item.FuelTypeId">Edit</a>
                    <a class="btn btn-primary btn-danger" asp-controller="FuelType" asp-action="Remove" asp-route-ID="@item.FuelTypeId">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back To Home</a>
<a class="btn btn-primary ml-2" asp-controller="FuelType" asp-action="GenerateExcel">
    Download As Excel Sheet <i class="bi bi-filetype-xlsx"></i>
</a>